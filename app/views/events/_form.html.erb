<%= simple_form_for @event do |f| %>
  <div class="form-group">
    <%= f.input :title, :label => "名称", input_html: {class: "form-control"} %>
    <%= f.input :description, :label => "简介", input_html: {class: "form-control"}%>
    <%= f.input :detail, :label => "内容", as: :text, input_html: { :rows => 15}%>
  </div>
  <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "提交中。。。"} %>
<% end %>
